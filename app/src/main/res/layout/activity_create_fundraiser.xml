<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@drawable/ff"
    android:layout_height="match_parent"
    tools:context=".CreateFundraiser">
    <ProgressBar
        android:id="@+id/pr"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:max="100"
        android:visibility="gone"
        android:progress="50"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/receive_intent"/>
    <ImageView
        android:id="@+id/arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_arrow_back"/>
    <TextView
        android:id="@+id/tt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/arrow_back"
        android:text="Create new fundraiser"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_send"
        android:textSize="20sp"
        android:paddingStart="2dp"
        android:layout_marginTop="10dp"
        android:paddingEnd="2dp"
        android:drawablePadding="5dp"
        android:textColor="@color/colorGreen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Submit"/>
    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/title"
        android:hint="title"
        android:drawableStart="@drawable/ic_create"
        android:textColorHint="@color/colorGray"
        android:drawablePadding="5dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/passcode"
        android:layout_width="wrap_content"
        android:hint="passcode"
        android:drawablePadding="5dp"
        android:inputType="number"
        android:drawableStart="@drawable/ic_lock"
        android:textColorHint="@color/colorGray"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/passcode"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_info"
        android:id="@+id/info"/>
    <TextView
        android:id="@+id/options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/passcode"
        android:text="Payment Options(add atleast one option)"/>
   <androidx.appcompat.widget.LinearLayoutCompat
       android:layout_width="match_parent"
       android:layout_marginTop="15dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/options"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <androidx.appcompat.widget.LinearLayoutCompat
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/text"
           android:orientation="vertical">
           <!--<androidx.cardview.widget.CardView-->
               <!--android:layout_width="wrap_content"-->
               <!--app:cardCornerRadius="@dimen/card_radius"-->
               <!--android:layout_height="wrap_content">-->

           <!--</androidx.cardview.widget.CardView>-->
           <androidx.appcompat.widget.LinearLayoutCompat
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="7dp"
               android:orientation="horizontal">
               <ImageView
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_marginStart="50dp"
                   android:src="@drawable/saf"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_marginTop="5dp"
                   android:layout_marginStart="5dp"
                   android:textSize="15sp"
                   android:layout_height="wrap_content"
                   android:textColor="@color/colorWhite"
                   android:text="M-Pesa Number"/>

           </androidx.appcompat.widget.LinearLayoutCompat>


           <EditText
               android:id="@+id/enter_mpesa_phone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColorHint="@color/colorGray"
               android:layout_marginStart="95dp"
               android:inputType="phone"
               android:textColor="@color/colorWhite"
               android:drawableStart="@drawable/ic_create"
               android:drawablePadding="5dp"
               android:hint="enter phone"/>
       </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text"
        android:orientation="vertical">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:src="@drawable/saf"/>
            <TextView
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:drawablePadding="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="M-Pesa Paybill:"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/enter_mpesa_paybill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorGray"
                android:layout_marginStart="20dp"
                android:textColor="@color/colorWhite"
                android:drawableStart="@drawable/ic_create"
                android:drawablePadding="5dp"
                android:hint="enter paybill"/>
            <EditText
                android:id="@+id/enter_mpesa_paybillaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColorHint="@color/colorGray"
                android:drawableStart="@drawable/ic_create"
                android:drawablePadding="5dp"
                android:textColor="@color/colorWhite"
                android:hint="enter a/c number"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text"
        android:orientation="vertical">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="46dp"
                android:src="@drawable/card"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"
                android:text="Bank Account Number"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
       <EditText
           android:id="@+id/enter_bank_account"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="95dp"
           android:textColorHint="@color/colorGray"
           android:textColor="@color/colorWhite"
           android:drawableStart="@drawable/ic_create"
           android:drawablePadding="5dp"
           android:hint="enter account"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text"
        android:orientation="vertical">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="46dp"
                android:src="@drawable/paypa"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"
                android:text="PayPal"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

       <EditText
           android:id="@+id/enter_paypal_account"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="95dp"
           android:textColorHint="@color/colorGray"
           android:drawableStart="@drawable/ic_create"
           android:drawablePadding="5dp"
           android:textColor="@color/colorWhite"
           android:hint="enter paypal email"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
   </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>